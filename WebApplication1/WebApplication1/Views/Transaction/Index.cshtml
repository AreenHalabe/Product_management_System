@{
    ViewData["ShowHeader"] = true;
}

@model List<WebApplication1.Models.TransactionModel>;
<html>
<head>

  
</head>
<body>

    <div class="container text-right">
        <div class="row">
            <div class="col-12">
                <a asp-controller="Transaction" asp-action="Add" class="btn btn-primary">
                   + <i class="fa-solid fa-receipt"></i>
                    Create_Transaction
                </a>
            </div>
        </div>
    </div>



    <table id="example" class="table table-striped" style="width:100%">
        <thead>
            <tr>
                <th>Medicine_Name</th>
                <th>Supplier_Name</th>
                <th>Customer_Name</th>
                <th>Date</th>
                <th>Quantity</th>
                <th>type</th>
            </tr>
        </thead>
        <tbody>
            @foreach (WebApplication1.Models.TransactionModel item in Model)
            {
                <tr>
                    @if(item.MedicineName == null){
                        <td><span>Removed</span> </td>
                    }
                    else{
                        <td>@item.MedicineName </td>
                    }
                    @if(item.SupplierName == null){
                        <td><span> Removed </span> </td>
                    }
                    else{
                        <td>@item.SupplierName </td>
                    }
                    
                    <td>@item.CustomerName </td>
                    <td>@item.TransactionDate.ToString("dd-MMM-yyyy")</td>
                    <td>@item.Quantity</td>
                    <td>@item.TransactionType</td>
                </tr>
            }
        </tbody>
    </table>

</body>
</html>