@{
    ViewData["Title"] = "Login Page";
    ViewData["ShowHeader"] = false;
}
@model WebApplication1.Models.SupplierModel;
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="~/css/stylelogin.css" rel="stylesheet" />
</head>
<body>

    <div class="d-flex justify-content-center align-items-center min-vh-100">

        <div class="card p-4 shadow" style="width: 90%; max-width: 400px; background-color: antiquewhite; border-radius: 25px; overflow: hidden;">
                    <h2 class="text-center mb-4">Modal Login Form</h2>
                    <form asp-action="Login" method="post">
                        <div class="mb-3">
                            <label for="uname" class="form-label"><b>Name</b></label>
                            <input type="text" class="form-control" id="uname" placeholder="Enter Username" asp-for="Name">
                            <span asp-validation-for="Name" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label for="psw" class="form-label"><b>Phone</b></label>
                            <input type="password" class="form-control" id="psw" placeholder="Enter Password" asp-for="Contact">
                            <span asp-validation-for="Contact" class="text-danger small"></span>
                        </div>

                        <button type="submit" class="btn btn-success w-100">Login</button>
                    </form>

                    @if (TempData["ErrorMessage"] != null)
                    {
                        <div class="alert alert-danger mt-3">@TempData["ErrorMessage"]</div>
                    }
        </div>

                <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
            
    </div>
   
   
</body>
</html>


